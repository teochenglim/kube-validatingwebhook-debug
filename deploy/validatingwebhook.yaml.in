apiVersion: admissionregistration.k8s.io/v1beta1
kind: ValidatingWebhookConfiguration
metadata:
  name: vwh-debug
  labels:
    app: vwh-debug
webhooks:
- name: vwh-debug.teochenglim.me
  failurePolicy: Ignore
  timeoutSeconds: 1
  clientConfig:
    service:
      name: vwh-debug
      namespace: ${NAMESPACE}
      path: "/validate"
    caBundle: ${CA_BUNDLE}
  rules:
  - operations: ["CREATE", "UPDATE"]
    apiGroups: [""]
    apiVersions: ["v1"]
    # resources: ["pods"]
    resources: ["*"]
